  margin: 8px;
  padding-top: 8px;
  background-color: #fff;
  border-radius: 8px;
}
.zoo .title {
  width: 100%;
  height: 32px;
  padding: 0 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.zoo .title .title-text {
  /* 根据需要设置文本样式 */
}
.zoo .title .arrow-container {
  padding-top: 7px;
  height: 100%;
  /* 根据需要设置箭头容器样式 */
}
.zoo .book-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.zoo .book-container .book-item {
  flex-basis: 25%;
  padding-top: 8px;
  margin-bottom: 5px;
  max-width: 22%;
  box-sizing: border-box;
}
.zoo .book-container .book-item .book-cover {
  width: 100%;
  max-width: 72px;
  height: 100px;
  position: relative;
  /* 或 absolute */
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  border-radius: 5px;
  background-color: #efefef;
}
.zoo .book-container .book-item .book-name {
  text-align: center;
  font-size: 14px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #111;
}

