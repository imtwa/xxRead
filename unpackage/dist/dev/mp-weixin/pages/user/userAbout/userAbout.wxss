/* 下部内容样式 */
/* 包裹图片和两行文字 */
.view_tupian_wenzi {
  height: 100px;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* 圆角 */
  border-radius: 10px;
  /* 边 */
  box-shadow: 2px 2px 2px rgba(85, 85, 85, 0.3);
  background-color: #f3f3f3;
  margin: 15px;
  /* padding使得文字和图片不至于贴着边框 */
  padding: 15px;
}
/* 包裹两行文字 */
.view_wenzi2 {
  width: 100%;
  margin-left: 12px;
  display: flex;
  flex-direction: column;
}
/* 小字 */
.text_small {
  font-size: 14px;
  word-break: break-all;
  color: #7a7878;
  margin-top: 4px;
}
/* 第一个项的背景颜色 */
.view_first {
  background-color: #97ad8b;
}
/* 点击的项的背景颜色 */
.view_active {
  background-color: #00aeff;
